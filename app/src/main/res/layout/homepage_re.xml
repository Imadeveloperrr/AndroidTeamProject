<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marketMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/homepage_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true">


                <View
                    android:id="@+id/homepage_icon_x"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="-0.31dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:background="#00000000"
                    />

                <TextView
                    android:id="@+id/homepage_market"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/homepage_market"
                    android:textAppearance="@style/homepage_market"
                    android:gravity="center_horizontal|top"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homepage_input_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="68dp">

                <View
                    android:id="@+id/homepage_main_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/homepage_main_bg"
                    />

                <TextView
                    android:id="@+id/homepage_main_search"
                    android:layout_width="54dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="@string/homepage_main_search"
                    android:textAppearance="@style/homepage_main_search"
                    android:gravity="top"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homepage_content_blo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="160dp"
                android:clipToOutline="true">
                <TextView
                    android:id="@+id/homepage_main_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/homepage_main_id"
                    android:textAppearance="@style/homepage_main_id"
                    />
                <LinearLayout
                    android:id="@+id/homepage_content_con"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/homepage_main_id"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/homepage_content_con_1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/homepage_content_con_2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_con"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/homepage_content_tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="160dp"
                        android:layout_weight="2.5"
                        android:text="유광진"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/homepage_content_tv_content2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="160dp"
                        android:layout_weight="2.5"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_con"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="이성호"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_con2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/homepage_content_con"
                    android:layout_marginTop="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/homepage_content_con_3"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/homepage_content_con_4"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_con2"
                    android:layout_centerInParent="true"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="이성호"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_con2"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="김민우"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homepage_content_blo_sup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@id/homepage_content_blo"
                android:clipToOutline="true">
                <TextView
                    android:id="@+id/homepage_content_blo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/homepage_main_id2"
                    android:textAppearance="@style/homepage_main_id"
                    />

                <LinearLayout
                    android:id="@+id/homepage_content_supcon"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/homepage_content_blo_id"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/homepage_content_supcon_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/homepage_content_supcon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homepage_content_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_supcon"
                    android:layout_centerInParent="true"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="이성호"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_supcon"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title6"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="김민우"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content6"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_supcon2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/homepage_content_supcon"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/homepage_content_supcon_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/homepage_content_supcon_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homepage_content_tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_supcon2"
                    android:layout_centerInParent="true"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title7"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="이성호"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content7"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="160dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/homepage_content_tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/homepage_content_supcon2"
                    android:weightSum="5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/homepage_content_tv_title8"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="유광진"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/homepage_content_tv_content8"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginLeft="10dp"
                        android:text="190 . 65kg . 270mm"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/homepage_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/serch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/homepage_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/homepage_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/message"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/homepage_message" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/my"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/homepage_profile" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>