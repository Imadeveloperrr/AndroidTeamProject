<?xml version="1.0" encoding="utf-8"?>
<!-- Following/Follower -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/following_follower"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Following/Follower_header -->
            <RelativeLayout
                android:id="@+id/following_follower_header"
                android:layout_width="411dp"
                android:layout_height="170dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:clipToOutline="true"
                android:background="@drawable/profile_re_edge">
                <!-- Following/Follower_Back -->
                <TextView
                    android:id="@+id/following_follower_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/following_follower_Back"
                    android:textAppearance="@style/following_follower_Back"
                    android:gravity="top"
                    />
                <!-- User_info -->
                <TextView
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="158dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/user_info"
                    android:textAppearance="@style/user_info"
                    android:gravity="center_horizontal|top"
                    />
                <!-- Following_logo -->
                <TextView
                    android:id="@+id/following_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="140dp"
                    android:text="@string/following_logo"
                    android:textAppearance="@style/following_logo"
                    android:gravity="center_horizontal|top"
                    />
                <!-- Follower_logo -->
                <TextView
                    android:id="@+id/follower_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="140dp"
                    android:text="@string/follower_logo"
                    android:textAppearance="@style/follower_logo"
                    android:gravity="center_horizontal|top"
                    />
            </RelativeLayout>
            <!-- Following/Follower_main -->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="411dp"
                android:layout_height="757dp"
                android:layout_below="@+id/following_follower_header"
                android:layout_marginTop="0dp"
                android:layout_weight="1" />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/home"
                android:layout_width="24dp"
                android:layout_height="26.67dp"
                android:src="@drawable/homepage_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/serch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/homepage_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/homepage_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/message"
                android:layout_width="26.67dp"
                android:layout_height="26.67dp"
                android:src="@drawable/homepage_message" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/my"
                android:layout_width="26.67dp"
                android:layout_height="26.67dp"
                android:src="@drawable/homepage_profile" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

